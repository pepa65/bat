[Unit]
Description=Persist the battery charge limit after {{.Event}}
After={{.Target}}.target
StartLimitBurst=0

[Service]
Type=oneshot
Restart=on-failure
ExecStart=/bin/sh -c 'b=$(echo /sys/class/power_supply/BAT?/charge_control_end_threshold); echo {{.Threshold}} >"$b"'
RemainAfterExit=true

[Install]
WantedBy={{.Target}}.target
